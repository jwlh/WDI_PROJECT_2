<div class="container">
  <div class="row">

    <div class="col">

    </div>

    <div class="col-6">

      <form method="POST" action="/restaurants/<%= restaurant.id %>">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" name="name" id="name" value="<%= restaurant.name %>"required class="form-control">
        </div>
        <fieldset>
          <legend>Address</legend>
          <div class="form-group">
            <label for="line1">Line 1</label>
            <input type="text" name="address[line1]" id="line1" required class="form-control" value="<%= restaurant.address.line1 %>">
          </div>
          <div class="form-group">
            <label for="line2">Line 2</label>
            <input type="text" name="address[line2]" id="line2" class="form-control" value="<%= restaurant.address.line2 %>">
          </div>
          <div class="form-group">
            <label for="city">City</label>
            <input type="text" name="address[city]" id="city" required class="form-control" value="<%= restaurant.address.city %>">
          </div>
          <div class="form-group">
            <label for="postcode">Postcode</label>
            <input type="text" name="address[postcode]" id="postcode" required class="form-control" value="<%= restaurant.address.postcode %>">
          </div>
        </fieldset>

        <div class="form-group">
          <label for="rating">Rating</label>
          <select name="rating" id="rating" required class="form-control">
            <option selected><%= restaurant.rating %></option>
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
          </select>
        </div>

        <div class="form-group">
          <label for="review">Review</label>
          <textarea type="text-box" name="review" id="review" required class="form-control" ><%= restaurant.review %></textarea>
        </div>
        <div class="form-group">
          <label for="image">Image</label>
          <input type="text" name="image" id="image" required class="form-control" value="<%= restaurant.image %>">
        </div>

        <button class="btn btn-outline-success">Update Restaurant</button>
      </form>
      <div class="col">

      </div>
    </div>
  </div>
</div>
